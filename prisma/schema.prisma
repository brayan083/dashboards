// Prisma schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  username String? @unique
  password String?
  role     Role    @default(USER)
  charts   Chart[]
  isActive Boolean @default(true)
  profilePicture String?
  bio      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  UserChartPermission UserChartPermission[]
}

model Chart {
  id          Int     @id @default(autoincrement())
  name        String
  type        String
  data        Json
  userId      Int
  user        User    @relation(fields: [userId], references: [id])
  description String?
  isPublic    Boolean @default(false)
  tags        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  UserChartPermission UserChartPermission[]
}

model UserChartPermission {
  id             Int      @id @default(autoincrement())
  userId         Int
  chartId        Int
  user           User     @relation(fields: [userId], references: [id])
  chart          Chart    @relation(fields: [chartId], references: [id])
  permissionLevel String  @default("read")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([userId, chartId])
}

enum Role {
  USER
  ADMIN
}
